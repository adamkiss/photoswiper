{
  "name": "photoswiper",
  "version": "2.0.0",
  "description": "A plugin for easy and accessible PhotoSwipe initialization",
  "main": "dist/photoswiper.module.js",
  "scripts": {
    "build-browser": "browserify src/photoswiper.js -s photoswiper -t [ babelify --presets [ es2015 ] --plugins [ add-module-exports ] ] | derequire > dist/photoswiper.browser.js",
    "build-node": "babel src/photoswiper.js -o dist/photoswiper.module.js",
    "prepublish": "npm run build-browser & npm run build-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sh0ji/photoswiper.git"
  },
  "keywords": [
    "jquery-plugin",
    "photoswipe",
    "accessibility",
    "a11y"
  ],
  "author": "Evan Yamanishi",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/sh0ji/photoswiper/issues"
  },
  "homepage": "https://github.com/sh0ji/photoswiper#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "derequire": "^2.0.3",
    "photoswipe": "^4.1.1",
    "tabtrap": "^1.2.6"
  },
  "browser": {
    "PhotoSwipeUIDefault": "./node_modules/photoswipe/dist/photoswipe-ui-default.js",
    "photoswiper-standalone": "dist/photoswiper.browser.js"
  }
}
